  //initialise value at 0
  int value=0;
  //low part of value
  unsigned char low;
  //low part map (8 bit mapping)
  unsigned char map0[8]={LED_MAP0};//LED_MAP0 is a #define
  //high part of value
  unsigned char high;
  //high part map (8 bit mapping)
  unsigned char map1[8]={LED_MAP1};//LED_MAP1 is a #define
